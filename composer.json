{
    "name": "huangdijia/mcp-sdk-php",
    "description": "Model Context Protocol SDK for PHP",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Anthropic, PBC",
            "homepage": "https://anthropic.com/"
        },
        {
            "name": "Deeka Wong",
            "homepage": "https://hdj.me/",
            "email": "huangdijia@gmail.com"
        }
    ],
    "homepage": "https://github.com/huangdijia/mcp-sdk-php",
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.0 || ^8.0",
        "psr/http-client": "^1.0",
        "psr/http-message": "^1.0 || ^2.0",
        "psr/log": "^1.0 || ^2.0 || ^3.0"
    },
    "require-dev": {
        "huangdijia/php-coding-standard": "^2.3",
        "mockery/mockery": "^1.5",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "ModelContextProtocol\\SDK\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ModelContextProtocol\\SDK\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs-fix": "php-cs-fixer fix $1",
        "analyse": "phpstan analyse"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "ergebnis/composer-normalize": true
        }
    }
}
